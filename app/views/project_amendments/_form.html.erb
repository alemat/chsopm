
<%= simple_form_for(@project_amendment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :project, as: :hidden %>
    <%= f.input :from, as: :string, input_html: {class: 'datepicker'} %>
    <%= f.input :to, as: :string, input_html: {class: 'datepicker'} %>
    <%= f.input :amendment_reason, input_html: {class: 'wysihtml5'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
