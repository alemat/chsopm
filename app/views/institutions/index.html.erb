<p id="notice"><%= notice %></p>
    <div class="header">
      <h2>
        Civil Society Organizations
      </h2>
    </div>
    <div class="body table-responsive">
      <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Short name</th>
      <th>Institution type</th>
      <th>Institution status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.id %></td>
        <td><%= institution.name %></td>
        <td><%= institution.short_name %></td>
        <td><%= institution.institution_type %></td>
        <td><%= institution.institution_status %></td>
        <td><%= link_to 'Details', institution, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_institution_path(institution), class: 'btn btn-primary' %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New CSO', new_institution_path, class: 'btn btn-primary' %>
</div>
