<p id="notice"><%= notice %></p>
    <div class="header">
      <h2>
        Projects
      </h2>
    </div>
    <div class="body table-responsive">
      <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Project title</th>
      <th>Institution</th>
      <th>Focus area</th>
      <th>Sub focus area</th>
      <th>Project details</th>
      <th>Project status</th>
      <th>Direct beneficiaries</th>
      <th>Indirect beneficiaries</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Total budget</th>
      <th>Program budget</th>
      <th>Admin budget</th>
      <th>Funding status</th>
      <th>Mid term evaluation date</th>
      <th>End term evaluation date</th>
      <th>Reporting type</th>
      <th>Project focal person</th>
      <th>Phone number</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.project_title %></td>
        <td><%= project.institution %></td>
        <td><%= project.focus_area %></td>
        <td><%= project.sub_focus_area %></td>
        <td><%= project.project_details %></td>
        <td><%= project.project_status %></td>
        <td><%= project.direct_beneficiaries %></td>
        <td><%= project.indirect_beneficiaries %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.total_budget %></td>
        <td><%= project.program_budget %></td>
        <td><%= project.admin_budget %></td>
        <td><%= project.funding_status %></td>
        <td><%= project.mid_term_evaluation_date %></td>
        <td><%= project.end_term_evaluation_date %></td>
        <td><%= project.reporting_type %></td>
        <td><%= project.project_focal_person %></td>
        <td><%= project.phone_number %></td>
        <td><%= project.email %></td>
        <td><%= link_to 'Show', project, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
